<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si ha olvidado la contraseña, debe reiniciar la aplicacion, esto significa que todos sus datos van a ser eliminados ¿Está seguro de realizar esta acción? "
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnEliminarTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewConfirmar"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnCancelarAccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textColor="@android:color/white"
        android:layout_below="@id/textViewConfirmar"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
